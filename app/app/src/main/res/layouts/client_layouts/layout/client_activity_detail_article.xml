<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    tools:context=".Client.Client_Pages.Client_DetailArticle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_dark">

        <ImageButton
            android:id="@+id/button_back_from_detail_article_to_find_merchant_articles"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:textSize="40sp"
            android:src="@drawable/ic_chevron_left_black_50dp"
            android:background="@drawable/round_edge_spinner_color_blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView_detail_article"
            android:layout_width="275dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/button_back_from_detail_article_to_find_merchant_articles"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/textView_detail_article_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Article Name"
                android:layout_gravity="left"
                android:textColor="@color/color_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/textView_detail_article_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 1.26 â‚¬"
                android:layout_gravity="right"
                android:textColor="@color/color_dark"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_weight="0.1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:gravity="center">

            <Button
                android:id="@+id/button_detail-article-addToBasket"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_edge_button_color_blue"
                android:text="Add to basket"
                android:textColor="@color/color_dark"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/textView_detail_article_name" />

            <TextView
                android:id="@+id/textView_detail_article_description"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textColor="@color/color_dark"
                app:layout_constraintTop_toBottomOf="@+id/button_detail-article-addToBasket" />

        </LinearLayout>

